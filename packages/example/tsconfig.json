{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "monaco-ai-editor": ["../monaco-ai-editor/src"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "*.ts",
    "*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "dist",
    "node_modules"
  ]
}