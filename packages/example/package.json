{
  "name": "@monacopilot/example",
  "private": true,
  "version": "1.0.0",
  "description": "Example application for Monaco AI Editor",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:node": "vite & pnpm run server:node",
    "dev:bun": "vite & bun --watch --hot server/server.ts",
    "server": "bun --watch server/server.ts",
    "server:dev": "bun --watch --hot server/server.ts",
    "server:node": "nodemon --exec tsx server/server.js",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@shikijs/monaco": "^3.8.1",
    "@tailwindcss/vite": "^4.1.11",
    "@vueuse/core": "^13.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.534.0",
    "monaco-ai-editor": "workspace:*",
    "monaco-editor": "^0.52.2",
    "monacopilot": "^1.2.7",
    "reka-ui": "^2.4.0",
    "shiki": "^3.8.1",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.6",
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@types/bun": "^1.2.19",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "nodemon": "^3.0.0",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.0.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vue-tsc": "^2.2.12"
  }
}